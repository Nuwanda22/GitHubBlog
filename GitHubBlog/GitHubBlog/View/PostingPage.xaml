<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GitHubBlog"
             x:Class="GitHubBlog.PostingPage">

    <StackLayout>
        <Entry x:Name="TitleEntry" Placeholder="제목"/>
        <Entry x:Name="SubTitleEntry" Placeholder="제목 (영어로 입력해주세요.)"/>
        <WebView x:Name="Previewer" HeightRequest="150"/>
        <Editor x:Name="ContentEditor" HeightRequest="150" TextChanged="ContentEditor_TextChanged"/>
        <Button Text="Send" Clicked="SendButton_Clicked"/>
        <Button Text="Show" Clicked="ShowButton_Clicked"/>
    </StackLayout>

</ContentPage>